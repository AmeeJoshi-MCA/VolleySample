<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/milk_and_more_logo" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/activity_home_textview_user"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Hi"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/big_button_text_size"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/activity_home_textview_start_day"
                android:layout_width="@dimen/big_button_width"
                android:layout_height="@dimen/big_button_height"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/activity_home_textview_user"
                android:background="@drawable/radius_10_background_theme_green"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="START DAY"
                android:textColor="@color/white"
                android:textSize="@dimen/big_button_text_size"
                tools:ignore="HardcodedText" />


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
