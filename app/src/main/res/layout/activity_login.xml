<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_login_icon_view_user_id"
                android:layout_width="@dimen/form_field_regular_icon_size"
                android:layout_height="@dimen/form_field_regular_icon_size"
                android:layout_alignBottom="@+id/activity_login_input_layout_user_id"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_email" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_login_input_layout_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/activity_login_icon_view_user_id"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_login_edittext_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="name"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/bw_7"
                    android:textColorHint="@color/bw_a"
                    android:textSize="@dimen/form_field_text_size"
                    tools:ignore="HardcodedText" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/activity_login_input_layout_user_id"
                android:layout_toEndOf="@+id/activity_login_icon_view_user_id"
                android:background="@color/bw_a" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_login_icon_view_password"
                android:layout_width="@dimen/form_field_regular_icon_size"
                android:layout_height="@dimen/form_field_regular_icon_size"
                android:layout_alignBottom="@+id/activity_login_input_layout_password"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_password" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_login_input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/activity_login_icon_view_password"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_login_edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="job"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/bw_7"
                    android:textColorHint="@color/bw_a"
                    android:textSize="@dimen/form_field_text_size"
                    tools:ignore="HardcodedText" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/activity_login_input_layout_password"
                android:layout_toEndOf="@+id/activity_login_icon_view_password"
                android:background="@color/bw_a" />

        </RelativeLayout>

        <TextView
            android:id="@+id/activity_login_text_button_login"
            android:layout_width="@dimen/big_button_width"
            android:layout_height="@dimen/big_button_height"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_10_background_theme_green"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="@dimen/big_button_text_size"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
